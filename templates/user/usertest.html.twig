{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    {{ form_start(usertest_form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            <label class="control-label col-sm-2" for="Name">Név:</label>
            {{ form_widget(usertest_form.name, {'attr': {'class': 'form-control'}}) }}  
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Gender">Nem:</label>
            {% block choice_widget %}
                 {% for child in usertest_form.gender %}
                     <div class="currency-label">
                       {{- form_widget(child) -}}
                        {{- form_label(child, null) -}}
                     </div>
                {% endfor %}
            {% endblock choice_widget %}
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Address">Cím:</label>
            {{ form_widget(usertest_form.address, {'attr': {'class': 'form-control'}}) }}  
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Aboutme">Rólam:</label>
            {{ form_widget(usertest_form.aboutMe, {'attr': {'class': 'form-control'}}) }}  
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="IsActive">Aktív-e:</label>
            {% block choice_widget1 %}
                 {% for child in usertest_form.isActive %}
                     <div class="currency-label">
                       {{- form_widget(child) -}}
                        {{- form_label(child, null) -}}
                     </div>
                {% endfor %}
            {% endblock choice_widget1 %}
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(usertest_form.Save, {'attr': {'class': 'btn btn-success'} }) }}
            </div>  
        </div>
    {{ form_end(usertest_form) }}
</div>

<div class="container">
  <div class="row">
    <div class="col text-center">
        <button onclick="location.href='./user-test-datas';" type="button" class="btn btn-warning">Mégse</button>
    </div>
  </div>
</div>
</div>

